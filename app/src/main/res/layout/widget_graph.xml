<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_button_background"
    android:minWidth="40dp"
    android:minHeight="40dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/chartImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/graph_widget_desc"
        android:gravity="center"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/widgetGraphError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="start|bottom"
            android:padding="2dp"
            android:layout_marginEnd="2dp"
            android:contentDescription="@string/widget_entity_fetch_error"
            android:src="@drawable/ic_sync_problem"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="1"
            android:text=""
            android:textAlignment="center"
            android:textColor="?colorWidgetOnBackground"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/widgetProgressBar"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorAccent" />
    </FrameLayout>
</FrameLayout>