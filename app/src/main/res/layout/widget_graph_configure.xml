<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="@dimen/activity_margin">

    <TextView
        android:id="@+id/activity_headline"
        style="@style/TextAppearance.HomeAssistant.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_entity_to_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/server_select"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_headline">

        <TextView
            style="@style/TextAppearance.Material3.LabelMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/widget_spinner_server" />

        <Spinner
            android:id="@+id/server_select_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/entityLabel"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:labelFor="@id/widget_text_config_entity_id"
        android:text="@string/label_entity_id"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_headline" />

    <AutoCompleteTextView
        android:id="@+id/widget_text_config_entity_id"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:completionThreshold="0"
        android:gravity="center_vertical"
        android:imeOptions="actionNext|flagNoFullscreen"
        android:inputType="text|textNoSuggestions"
        android:labelFor="@id/entityLabel"
        android:padding="15dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/activity_headline"
        tools:hint="sensor.electric_meter"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/label"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/widget_text_hint_label"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/widget_text_config_entity_id"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/timeRangeLabel"
        style="@style/TextAppearance.Material3.LabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/timeRange"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Time range: 180h" />


    <CheckBox
        android:id="@+id/smoothGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:buttonTint="@color/colorAccent"
        android:text="@string/smoother_stats"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/label"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/timeRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:stepSize="1"
        android:value="24"
        android:valueFrom="1"
        app:labelBehavior="gone"
        android:valueTo="180"
        app:layout_constraintTop_toBottomOf="@+id/smoothGraph"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="@string/add_widget"
        android:textColor="@color/colorWidgetButtonLabelWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeRange" />
</androidx.constraintlayout.widget.ConstraintLayout>
