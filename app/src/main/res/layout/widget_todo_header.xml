<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_todo_error"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:contentDescription="@string/widget_template_error"
        android:padding="4dp"
        android:src="@drawable/ic_sync_problem"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/widget_todo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginEnd="4dp"
        android:text="@string/widget_todo_label"
        android:textColor="?colorWidgetOnBackground"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:showIn="@layout/widget_todo" />

    <ImageView
        android:id="@+id/widget_todo_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="4dp"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/widget_todo_refresh"
        android:padding="4dp"
        android:src="@drawable/ic_refresh_toolbar" />

    <ImageView
        android:id="@+id/widget_todo_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/widget_button_background_accent"
        android:contentDescription="@string/widget_todo_add"
        android:padding="4dp"
        android:src="@drawable/ic_plus"
        android:tint="@android:color/white"
        tools:ignore="UseAppTint" />

</LinearLayout>
