<?xml version="1.0" encoding="utf-8"?>
<!--
  2x2 variant for Samsung Z Flip cover screen
-->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="150dp"
    android:minHeight="133dp"
    android:updatePeriodMillis="86400000"
    android:initialKeyguardLayout="@layout/widget_button_wrapper_default"
    android:initialLayout="@layout/widget_button_wrapper_default"
    android:resizeMode="none"
    android:widgetCategory="keyguard"
    android:widgetFeatures="reconfigurable"
    android:previewImage="@drawable/widget_example_button"
    android:targetCellWidth="2"
    android:targetCellHeight="2"
    android:configure="io.homeassistant.companion.android.widgets.button.ButtonWidgetConfigureActivity"
    android:description="@string/button_widget_desc" />
